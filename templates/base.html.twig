<!doctype html>
<html lang="fr">

	<head>
		<meta charset="UTF-8">
		<meta charset="UTF-8"/>
		<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
		<meta http-equiv="X-UA-Compatible" content="ie=edge"/>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
		<title>
			{% block title %}TheWalk
			{% endblock %}
		</title>

		{% block stylesheets %}
			<link rel="stylesheet" href="{{ asset('css/style.css') }}"/>
			<link rel="stylesheet" href="{{ asset('css/responsive.css') }}"/>
			<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css"/>
			<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
		{% endblock %}
	</head>
	<body onload="myFunction()">

		{% block body %}
			{% for message in app.flashes('success') %}
				<div id=" alertDelai" class="alert alert-success">
					{{ message }}
				</div>
			{% endfor %}

			{% block header %}
				<header>
					<nav>
						<ul class="navUl">
							<div class="navG">
								<li>
									<a href="{{ path('home') }}">Accueil</a>
								</li>
								<li>
									<a href="{{ path('gallery_index') }}">Galerie</a>

								</li>
								<li>
									<a href="">Agenda</a>
								</li>
								<li>
									<a href="{{ path('articles_index') }}">Articles</a>
								</li>
								<li>
									<a href="{{ path('security_contact') }}">Contact</a>
								</li>
							</div>
							<div class="navD">
								{% if not app.user or not is_granted('ROLE_USER') %}


									<li>
										<a href="{{ path('security_registration') }}">Inscription</a>
									</li>
									<li>
										<a href="{{ path('security_login') }}">Connexion</a>
									</li>

								{% elseif app.user and is_granted('ROLE_ADMIN') %}

									<li>
										<a href="{{ path('admin') }}">Panneau Admin</a>
									</li>
									<li>
										<a href="{{ path('security_logout') }}">Déconnexion</a>
									</li>

								{% elseif app.user and is_granted('ROLE_USER') %}

									<li>
										<a href="{{ path('security_profile') }}">Mon profil</a>
									</li>
									<li>
										<a href="{{ path('security_logout') }}">Déconnexion</a>
									</li>
								{% endif %}


							</div>
						</ul>
					</nav>
					<div class="menu">
						<a class="burger-icon">
							<i class="fa fa-bars"></i>
						</a>

						<div class="lista-menu">
							<ul>
								<li><a href="">Accueil</a></li>
								<li><a href="">Galerie</a></li>
								<li><a href="">Agenda</a></li>
								<li><a href="">Articles</a></li>
								<li><a href="">Contact</a></li>
								<li><a href="">Inscription</a></li>
								<li><a href="">Connexion</a></li>
							</ul>
						</div>
					</div>
				</header>
			{% endblock %}

			{% block contenu %}{% endblock %}

			{% block footer %}
				<footer>
					<a href="">Mentions légales</a>
					<img src="{{ asset('img/iconFooter.png') }}" alt=""/>
					<a href="">Mikael Jung</a>
				</footer>
			{% endblock %}

			{% block javascripts %}
				<script src="{{ asset('js/script.js') }}"></script>
			{% endblock %}

		{% endblock %}
	</body>
</html>
